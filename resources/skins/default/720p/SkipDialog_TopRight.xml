<window>
  <coordinates>
    <system>1</system>
    <posx>0</posx>
    <posy>0</posy>
    <width>1920</width>
    <height>1080</height>
  </coordinates>

  <zorder>1</zorder>
  <defaultcontrol>3012</defaultcontrol>

  <animation type="WindowOpen">
    <effect type="slide" start="0,-100" end="0,0" time="300" tween="quadratic" easing="out" />
    <effect type="fade" start="0" end="100" time="400" />
  </animation>

  <animation type="WindowClose">
    <effect type="slide" start="0,0" end="0,-100" time="300" tween="quadratic" easing="in" />
    <effect type="fade" start="100" end="0" time="300" />
  </animation>

  <controls>
    <control type="group">
      <posx>895</posx>
      <posy>0</posy>
      <width>430</width>
      <height>100</height>

      <control type="image">
        <left>0</left><top>0</top>
        <width>430</width><height>100</height>
        <texture>white.png</texture>
        <colordiffuse>F0000000</colordiffuse>
      </control>

      <control type="image">
        <left>5</left><top>13</top>
        <width>20</width><height>20</height>
        <texture>icon_skip.png</texture>
        <visible>!String.IsEqual(Window.Property(hide_skip_icon),true)</visible>
      </control>

      <control type="image">
        <left>280</left><top>13</top>
        <width>20</width><height>20</height>
        <texture>icon_close.png</texture>
        <visible>!String.IsEqual(Window.Property(hide_close_button),true) + !String.IsEqual(Window.Property(hide_skip_icon),true)</visible>
      </control>

      <control type="button" id="3012">
        <left>35</left><top>10</top>
        <width>240</width><height>25</height>
        <label>Skip</label>
        <onright>3013</onright>
        <font>font16</font>
        <texturefocus>button_focus.png</texturefocus>
        <texturenofocus>-</texturenofocus>
        <textcolor>lightgrey</textcolor>
        <textcolorfocus>FFFFFFFF</textcolorfocus>
        <shadowcolor>FF000000</shadowcolor>
        <shadowoffsetx>2</shadowoffsetx>
        <shadowoffsety>2</shadowoffsety>
        <aligny>center</aligny>
        <align>center</align>
        <textoffsetx>0</textoffsetx>
        <visible>!String.IsEqual(Window.Property(hide_close_button),true)</visible>
      </control>

      <control type="button" id="3015">
        <left>30</left><top>10</top>
        <width>350</width><height>25</height>
        <label>Skip</label>
        <font>font16</font>
        <texturefocus>button_focus.png</texturefocus>
        <texturenofocus>-</texturenofocus>
        <textcolor>lightgrey</textcolor>
        <textcolorfocus>FFFFFFFF</textcolorfocus>
        <shadowcolor>FF000000</shadowcolor>
        <shadowoffsetx>2</shadowoffsetx>
        <shadowoffsety>2</shadowoffsety>
        <aligny>center</aligny>
        <align>center</align>
        <textoffsetx>0</textoffsetx>
        <visible>String.IsEqual(Window.Property(hide_close_button),true) + !String.IsEqual(Window.Property(hide_skip_icon),true)</visible>
      </control>

      <control type="button" id="3016">
        <left>5</left><top>10</top>
        <width>350</width><height>25</height>
        <label>Skip</label>
        <font>font16</font>
        <texturefocus>button_focus.png</texturefocus>
        <texturenofocus>-</texturenofocus>
        <textcolor>lightgrey</textcolor>
        <textcolorfocus>FFFFFFFF</textcolorfocus>
        <shadowcolor>FF000000</shadowcolor>
        <shadowoffsetx>2</shadowoffsetx>
        <shadowoffsety>2</shadowoffsety>
        <aligny>center</aligny>
        <align>center</align>
        <textoffsetx>0</textoffsetx>
        <visible>String.IsEqual(Window.Property(hide_close_button),true) + String.IsEqual(Window.Property(hide_skip_icon),true)</visible>
      </control>

      <control type="button" id="3013">
        <left>300</left><top>10</top>
        <width>80</width><height>25</height>
        <label>Close</label>
        <onleft>3012</onleft>
        <onclick>Close</onclick>
        <font>font16</font>
        <texturefocus>button_focus.png</texturefocus>
        <texturenofocus>-</texturenofocus>
        <textcolor>lightgrey</textcolor>
        <textcolorfocus>white</textcolorfocus>
        <shadowcolor>FF000000</shadowcolor>
        <shadowoffsetx>1</shadowoffsetx>
        <shadowoffsety>1</shadowoffsety>
        <aligny>center</aligny>
        <align>center</align>
        <textoffsetx>0</textoffsetx>
        <visible>!String.IsEqual(Window.Property(hide_close_button),true)</visible>
      </control>

      <control type="label">
        <left>5</left><top>41</top>
        <width>360</width><height>20</height>
        <label>$INFO[Window.Property(next_jump_label)]</label>
        <font>font11</font>
        <textcolor>FFB0D4E8</textcolor>
        <shadowcolor>FF000000</shadowcolor>
        <shadowoffsetx>1</shadowoffsetx>
        <shadowoffsety>1</shadowoffsety>
        <align>left</align>
        <visible>String.IsEqual(Window.Property(show_next_jump),true)</visible>
      </control>

      <control type="label" id="2">
        <left>5</left><top>66</top>
        <width>360</width><height>20</height>
        <label>$INFO[Window.Property(ending_text)] $INFO[Window.Property(countdown)]</label>
        <font>font10</font>
        <textcolor>FFB0B0B0</textcolor>
        <shadowcolor>FF000000</shadowcolor>
        <shadowoffsetx>1</shadowoffsetx>
        <shadowoffsety>1</shadowoffsety>
        <align>left</align>
        <visible>!String.IsEqual(Window.Property(hide_ending_text),true)</visible>
      </control>

      <control type="progress" id="3014">
        <left>5</left><top>90</top>
        <width>370</width><height>5</height>
        <texturebg>progress_background.png</texturebg>
        <textureleft>progress_left.png</textureleft>
        <midtexture>progress_mid.png</midtexture>
        <textureright>progress_right.png</textureright>
        <aspectratio>stretch</aspectratio>
        <orientation>horizontal</orientation>
      </control>
    </control>
  </controls>
</window>
